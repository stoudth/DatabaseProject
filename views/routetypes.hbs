    {{!-- Embed our javascript to handle AJAX request--}}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    
    <table id="routetypes-table" data-toggle="table" class="table table-hover">
