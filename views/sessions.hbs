<html>
    <head>
        <title>
            Apex Climbing Sessions
        </title>
        <link href="style.css" rel="stylesheet" type="text/css"/>
        <script language="JavaScript">
            function showform(action) {
                if (action == 'update'){
				    document.getElementById('browse').style.display = 'none';
				    document.getElementById('insert').style.display = 'none';
				    document.getElementById('update').style.display = 'block';
                } else if (action == 'insert'){
                    document.getElementById('browse').style.display = 'none';
                    document.getElementById('insert').style.display = 'block';
                    document.getElementById('update').style.display = 'none';
			    } else { //by default display browse
				    document.getElementById('browse').style.display = 'block';
				    document.getElementById('insert').style.display = 'none'; 
				    document.getElementById('update').style.display = 'none';
			}
            }
            function newSession() { showform('insert'); }
            function updateSession(id) { showform('update'); }
            function browse() { showform ('browse'); }
        </script>
    </head>
</html>

<body onload="browse()">
    <h1>Sessions</h1>
    <a href="index">Home</a> |
    <a href="locations"> Locations</a> | 
    <a href="classes">Classes</a> | 
    <a href="sessions">Sessions</a> | 
    <a href="routes.html">Routes</a> | 
    <a href="routesetters.html">RouteSetters</a> | 
    <a href="routetypes.html">RouteTypes</a>

    <br><br>
    <div id="info">
        <fieldset>
            <p>Operations available for Sessions: SELECT, INSERT, UPDATE (for M:N relationship)</p>
        </fieldset>
    </div>

    <div id="browse">
        <p><strong>Browse Sessions- Displays All Sessions Currently In The Database</strong></p>
        <table border="1" cellpadding="5">
            {{!--Header section --}}
            <thead>
                {{!--For just the first row, we print each key of the row object as a header cell so we
                know what each column means when the page renders --}}
                <tr>
                    {{!--{{#each data.[0]}}--}}
                    <th>Session ID</th>
                    <th>Location</th>
                    <th>Class</th>
                    <th>Session Date</th>
                    <th>Size Limit</th>
                    <th>Edit</th>
                    {{!--{{/each}}--}}
                </tr>
            </thead>

            {{!-- Body section --}}
            <tbody>
                {{!-- For each row, print the id, locationName, streetAddress, city, state, zipcode --}}
                {{#each data}}
                <tr>
                    <td>{{this.idSession}}</td>
                    <td>{{this.locationName}}</td>
                    <td>{{this.className}}</td>
                    <td>{{this.classDate}}</td>
                    <td>{{this.sizeLimit}}</td>
                    <td><a href="#" onClick="updateSession('this.ID')">Edit</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <br>
        <form method="POST" id="addSession">
            <input class="btn" type="button" value="Add Session" onClick="newSession()">
        </form> 
    </div>

    <div id="update">
        <form method="POST" id="updateSession">
            <p><strong>Update Session</strong></p>
            <fieldset class="fields">
                <input type="hidden" name="sessionID" id="updateSessionID" value="1"><br>
                <label> Session ID: </label> 1 <br>
                <label> Location: </label> <select name="locationName">
                    <option value="1">Northeast</option>
                    <option value="2">Southeast</option>
                    <option value="3" selected>Midwest</option>
                    </select>
                 <br>
                <label> Class: </label> <select name="className">
                    <option value="1" selected>Mobility</option>
                    <option value="2">Recovery yoga</option>
                    <option value="3">Intro to Lead Climbing</option>
                    <option value="4">Wilderness First Aid</option>
                    <option value="5">Core Power</option>
                </select>
                <br>
                <label> Session Date: </label> <input type="date" name="classDate" value = "2024-02-05"><br>
            </fieldset>
            <br>
            <input class="btn" type="submit" id="confirmUpdate" value="Update Session">
            <input class="btn" type="button" value="Cancel" onClick="browse()">
        </form> 
    </div>

    <div id="insert">
        <form method="POST" id="addSession">
            <p><strong>Add New Session</strong></p>
            <fieldset class="fields">
                <label> Location: </label> <select name="locationName">
                    <option value="1" selected>Northeast</option>
                    <option value="2">Southeast</option>
                    <option value="3">Midwest</option>
                    </select>
                <br>
                <label> Class: </label> <select name="className">
                    <option value="1" selected>Mobility</option>
                    <option value="2">Recovery yoga</option>
                    <option value="3">Intro to Lead Climbing</option>
                    <option value="4">Wilderness First Aid</option>
                    <option value="5">Core Power</option>
                </select>
                <br>
                <label> Session Date: </label> <input type="date" name="classDate"><br>
            </fieldset>
            <br>
            <input class="btn" type="submit" id="addSession" value="Add Session">
            <input class="btn" type="button" value="Cancel" onClick="browse()">
        </form> 
    </div>
</body>
