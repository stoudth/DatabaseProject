<script>
    function hideAndShowAdd() {
        var toggleAdd = document.getElementById("hiddenAdd");
        if (toggleAdd.style.display === "none") {
            toggleAdd.style.display = "block";
        } else {
            toggleAdd.style.display = "none";
        }
    }
</script> 


